{
  "manifest_version": 3,
  "name": "Manage Tabs - Auto Group, Sort and Clean",
  "version": "0.1.0",
  "description": "Sort tabs, close duplicates, and inspect recent activity.",
  "permissions": ["tabs", "history", "storage", "tabGroups", "scripting"],
  "optional_host_permissions": ["<all_urls>"],
  "action": {
    "default_title": "Manage Tabs",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  "background": {
    "service_worker": "src/background/service_worker.js"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Alt+Shift+T"
      },
      "description": "Open Manage Tabs window"
    }
  },
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}
